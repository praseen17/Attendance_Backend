{
    "name": "offline-attendance-sync-backend",
    "version": "1.0.0",
    "description": "Backend API for offline attendance sync system",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:all": "ts-node src/__tests__/test-runner.ts",
        "test:unit": "jest --testPathPattern=unit.test",
        "test:integration": "jest --testPathPattern=integration.test",
        "test:performance": "jest --testPathPattern=performance.test --testTimeout=120000",
        "test:websocket": "jest --testPathPattern=websocket",
        "test:security": "jest --testPathPattern=security",
        "test:coverage": "jest --coverage --coverageDirectory=coverage",
        "test:watch": "jest --watch",
        "test:ci": "ts-node src/__tests__/test-runner.ts --coverage --fail-fast",
        "test:ws": "ts-node src/test-websocket.ts",
        "db:init": "ts-node src/database/init.ts",
        "db:migrate": "ts-node src/database/migrate.ts migrate",
        "db:status": "ts-node src/database/migrate.ts status",
        "db:reset": "ts-node src/database/reset.ts",
        "db:test": "ts-node src/database/test.ts",
        "db:seed": "ts-node src/database/seed.ts",
        "db:faculty": "ts-node -e \"import('./src/database/seed.ts').then(m => m.getFacultyList())\"",
        "migrate": "ts-node src/database/migrate.ts"
    },
    "keywords": [
        "attendance",
        "offline",
        "sync",
        "education"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "uuid": "^9.0.1",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.5",
        "@types/node-fetch": "^2.6.13",
        "@types/pg": "^8.10.9",
        "@types/supertest": "^2.0.16",
        "@types/uuid": "^9.0.7",
        "@types/ws": "^8.5.10",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}
